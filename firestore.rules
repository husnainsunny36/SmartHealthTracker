rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      // Allow read/write access only if the user is authenticated and accessing their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Health data collection
      match /health_data/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Water logs collection
      match /water_logs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Step logs collection
      match /step_logs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Sleep logs collection
      match /sleep_logs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User goals collection
      match /user_goals/{goalsId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
