<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include all data by default -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        <!-- Exclude sensitive health data from cloud backup -->
        <exclude domain="database" path="health_database" />
        <exclude domain="sharedpref" path="health_preferences.xml" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow device transfer of non-sensitive data -->
        <include domain="file" path="." />
        <include domain="database" path="." />
        <exclude domain="database" path="health_database" />
    </device-transfer>
</data-extraction-rules>
